<h2>Edit Listing</h2>

<form method="post" action="/listings/<%=@listing.id%>">
   <label>Name:</label>
   <input id="hidden" type="hidden" name="_method" value="PATCH">
   <input type="text" name="name" value="<%= @listing.name %>"><br>
   <label>Price:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="price" value="<%= @listing.price %>"><br>
   <label>Bedrooms:</label>
   <input id="hidden" type="hidden" name="_method" value="PATCH">
   <input type="integer" name="bedrooms" value="<%= @listing.bedrooms %>"><br>
  <label>Bathrooms:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="integer" name="bathrooms" value="<%= @listing.bathrooms %>"><br>

  <input type="submit" value="submit">
</form>




<style>
label,
textarea {
    font-size: .8rem;
    letter-spacing: 1px;
}
textarea {
    padding: 10px;
    max-width: 100%;
    line-height: 1.5;
    border-radius: 5px;
    border: 1px solid #ccc;
    box-shadow: 1px 1px 1px #999;
}

label {
    display: block;
    margin-bottom: 10px;
}
</style>