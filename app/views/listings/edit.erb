
<h2>Edit Listing</h2>

<form method="post" action="/listings/<%=@listing.id%>">

<label>Name:</label>
   <input id="hidden" type="hidden" name="_method" value="PATCH">
   <input type="text" name="name" value="<%= @listing.name %>"><br>
<label>Price:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="price" value="<%= @listing.price %>"><br>
<label>Bedrooms:</label>
   <input id="hidden" type="hidden" name="_method" value="PATCH">
   <input type="integer" name="bedrooms" value="<%= @listing.bedrooms %>"><br>
<label>Bathrooms:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="integer" name="bathrooms" value="<%= @listing.bathrooms %>"><br>
<label>Street:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="street" value="<%= @listing.street %>"><br>
<label>City:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="city" value="<%= @listing.city %>"><br>
<label>State:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="state" value="<%= @listing.state %>"><br>
<label>Postal Code:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="postal" value="<%= @listing.postal %>"><br>
<label>Description:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="description" value="<%= @listing.description %>"><br>
<label>Propery Picture:</label>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="pic" value="<%= @listing.pic %>"><br>

<input type="submit" value="submit">




<style>
label,
textarea {
    font-size: .8rem;
    letter-spacing: 1px;
}
textarea {
    padding: 10px;
    max-width: 100%;
    line-height: 1.5;
    border-radius: 5px;
    border: 1px solid #ccc;
    box-shadow: 1px 1px 1px #999;
}

label {
    display: block;
    margin-bottom: 10px;
}
</style>